<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.Mobile.Pages.SettingsPage"
             xmlns:controls="clr-namespace:ToDoList.Mobile.CustomControls"
             Title="SettingsPage">
             <!--xmlns:controls="clr-namespace:ToDoList.Mobile.CustomControls;assembly=ToDoList.Mobile.CustomControls"-->
             
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout Grid.Column="1" 
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical">

            <controls:DarkModeView/>
            
            <StackLayout Orientation="Horizontal" Margin="10">
                <Label VerticalOptions="Center" Text="Layout"></Label>
                <Picker VerticalOptions="Center" HorizontalOptions="EndAndExpand">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Inglisz</x:String>
                            <x:String>Polisz</x:String>
                            <x:String>Francis</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="10">
                <Label VerticalOptions="Center" Text="Version"></Label>
                <Label VerticalOptions="Center" HorizontalOptions="EndAndExpand" Text="1.01.3"></Label>
            </StackLayout>
        </StackLayout>
        <Label Grid.Column="2" Text="tamtej"></Label>
    </Grid>
</ContentPage>